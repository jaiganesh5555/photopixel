{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["bun-types"],
    "paths": {
      "common/*": ["../../packages/common/*"],
      "db/*": ["../../packages/db/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
